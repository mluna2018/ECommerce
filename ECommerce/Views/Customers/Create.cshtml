            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Ver lista", "Index", new { }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
